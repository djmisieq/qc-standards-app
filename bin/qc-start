#!/bin/bash

# QC Standards App - Global Terminal Command
# This script can be run from anywhere in the terminal

# Navigate to the project directory
cd /workspaces/qc-standards-app

echo "ğŸš€ Starting QC Standards App..."

# Start databases
echo "ğŸ“¦ Starting databases..."
docker-compose -f docker-compose.dev.yml up -d

# Wait for databases to be ready
echo "â³ Waiting for services..."
sleep 10

# Start backend in background
echo "ğŸ”§ Starting backend..."
cd backend
uvicorn app.main:app --reload --host 0.0.0.0 --port 8000 > /tmp/backend.log 2>&1 &
BACKEND_PID=$!

# Start frontend in background  
echo "âš›ï¸  Starting frontend..."
cd ../frontend
npm run dev -- --host 0.0.0.0 --port 5173 > /tmp/frontend.log 2>&1 &
FRONTEND_PID=$!

# Wait for services to start
sleep 5

echo ""
echo "âœ… QC Standards App is running!"
echo "ğŸŒ Frontend: http://localhost:5173"
echo "ğŸ”§ Backend: http://localhost:8000"
echo "ğŸ“š API Docs: http://localhost:8000/api/docs"
echo ""
echo "ğŸ“Š View logs:"
echo "   Backend:  tail -f /tmp/backend.log"
echo "   Frontend: tail -f /tmp/frontend.log"
echo ""
echo "ğŸ›‘ To stop: docker-compose -f /workspaces/qc-standards-app/docker-compose.dev.yml down"
echo ""