# PostgreSQL configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=qc_standards
DATABASE_URL=postgresql://postgres:password@db:5432/qc_standards

# Backend configuration
SECRET_KEY=your-secret-key-replace-in-production
DEBUG=True
ENVIRONMENT=development
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:8080,https://*.github.dev,https://*.app.github.dev,https://*.githubpreview.dev

# Redis configuration
REDIS_URL=redis://redis:6379/0

# JWT Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# File upload settings
MAX_UPLOAD_SIZE=10485760  # 10 MB

# Frontend settings
# In GitHub Codespaces, uncomment and update this line:
# VITE_API_URL=https://your-codespace-backend-url-8000.app.github.dev/api/v1
VITE_API_URL=http://localhost:8000/api/v1
